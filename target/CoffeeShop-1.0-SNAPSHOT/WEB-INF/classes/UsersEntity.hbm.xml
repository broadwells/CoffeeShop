<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.grandcircus.spring.models.UsersEntity" table="Users" schema="CoffeeShopDB">
        <id name="customerId">
            <column name="CustomerID" sql-type="int(11)"/>
        </id>
        <property name="firstName">
            <column name="FirstName" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="lastName">
            <column name="LastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="email">
            <column name="Email" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="password">
            <column name="Password" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="coffeeType">
            <column name="CoffeeType" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="shopAddress">
            <column name="ShopAddress" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>